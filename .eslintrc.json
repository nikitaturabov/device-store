{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "error",
    "no-unused-vars": "error",
    "no-dupe-keys": "error",
    "no-empty": "error",
    "no-var": "error",
    "no-extra-boolean-cast": "error",
    "no-extra-parens": "error",
    "no-negated-in-lhs": "error",
    "no-unreachable": "error",
    "block-scoped-var": "error",
    "curly": "error",
    "eqeqeq": "error",
    "no-else-return": "error",
    "no-loop-func": "error",
    "no-multi-spaces": "error",
    "no-multi-str": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-shadow": "error",
    "no-undef-init": "error",
    "no-use-before-define": "error",
    "brace-style": "error",
    "sort-vars": "error",
    "space-before-blocks": "error",
    "space-in-parens": "error",
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "max-len": [
      "warn",
      {
        "code": 140
      }
    ],
    "no-extra-semi": "error"
  }
}

